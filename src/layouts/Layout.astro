---
import Navbar from '../components/Navbar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<div class='mx-auto max-w-6xl p-2 lg:py-6 lg:px-2'>
			<slot />
		</div>
	</body>
</html>
<style is:global>
	:root {
		@apply bg-slate-100;
	}

	.button {
		@apply py-1.5 px-3 bg-slate-100 text-slate-600 text-base font-semibold align-middle rounded-md;
	}
</style>
